                <repository>
                    <id>pyx4j.com-file-release</id>
                    <url>file:///home/apache/pyx4j-repository/maven2-release</url>
                </repository>

            </distributionManagement>

            <modules>
                <module>microemu-webstart</module>
            </modules>
        </profile>

